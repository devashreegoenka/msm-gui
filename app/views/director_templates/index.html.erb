<h1>
  List of all directors
</h1>

<hr>

<form action="/insert_director" method="post">
<label for="zebra"> Name </label>
    <input type="text" name="name_director" id="zebra">


<div>
<label for="giraffe"> Dob </label>
    <input type="date" name="dob_director" id="giraffe" >
  </div>

 <div>
<label for="tiger"> Bio </label>
    <input type="text" name="bio_director" id="tiger" >
  </div>

 <div>
<label for="elephant"> Image </label>
    <input type="text" name="image_director" id="elephant" >
  </div>

<button> Create director </button>

</form>


<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
